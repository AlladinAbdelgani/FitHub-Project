<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/signupBookSeekerEmailET"
        android:layout_width="299dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/signupBookSeekerPasswordET"
        android:layout_width="298dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ems="10"
        android:hint="8-Character Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="59dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:src="@mipmap/emailicon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="230dp"
        android:src="@mipmap/passwordicon" />


    <Button
        android:id="@+id/signupBookSeekerBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:background="@drawable/shape"
        android:text="Signup"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/signupBookSeekerNameET"
        android:layout_alignParentStart="true"
        android:src="@mipmap/personicon" />

    <EditText
        android:id="@+id/signupBookSeekerNameET"
        android:layout_width="296dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/bookSeekerEyeImg"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="221dp"
        android:layout_marginEnd="13dp"
        android:src="@mipmap/eyeicon" />

    <TextView
        android:id="@+id/loginHereTV"
        android:layout_width="294dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/imageView2"
        android:fontFamily="casual"
        android:text="Already have account? Login here"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="Marathon Tracker"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

</RelativeLayout>