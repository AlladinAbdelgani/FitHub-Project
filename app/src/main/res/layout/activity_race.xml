<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RaceActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="68dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="101dp"
        android:text="Timer:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timerTV"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="00 : 00 : 00"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="150dp"
        android:text="Distance(Km):"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/timerTV"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="-4dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="00"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:text="Pause"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pauseBtn"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape"
        android:text="Reset"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/setTimeBtn"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/resetBtn"
        android:layout_below="@+id/logoutBtn"
        android:background="@drawable/shape"
        android:text="Set"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/shape"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="107dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="User Name"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ListView

        android:id="@+id/RunningListView"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/startBtn"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="22dp"
        android:divider="@android:color/holo_green_light"
        android:scrollbars="none" />

    <EditText
        android:id="@+id/hourET"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="H"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/minET"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hourET"
        android:layout_toStartOf="@+id/resetBtn"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="M"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/setTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hourET"
        android:layout_alignEnd="@+id/textView4"
        android:text="Set Time"
        android:textSize="18sp" />


</RelativeLayout>